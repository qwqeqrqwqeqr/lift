<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Lift" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:navigationBarColor">?attr/background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>


    <style name="Theme.Life.SplashScreen" parent="Theme.SplashScreen">
        <item name="android:statusBarColor">@color/secondary_color</item>
        <item name="android:navigationBarColor">@color/secondary_color</item>
        <item name="android:windowSplashScreenAnimationDuration">1000000</item>

        <item name="android:windowSplashScreenBackground">@color/secondary_color</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/secondary_color</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="postSplashScreenTheme">@style/Theme.Lift</item>
    </style>
</resources>